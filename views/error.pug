doctype html 
html 
    head 
        block head
            meta(charset='UTF-8')
            meta(name='viewport' content='width=device-width, initial-scale=1.0')
            link(rel='stylesheet' href='/css/style.css')
            link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css')
            link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Lato:300,300i,700')
            link(rel='stylesheet' href=('/css/landing.css'))
            title  IBM | #{title}

    body
        nav.flex.justify-between.shadow-md.shadow-gray-400.items-center.py-6.px-52
            a(href='https://www.ibm.com/uk-en')
                img.h-12(src='/img/ibm-logo.png', alt='IBM Logo')

            .flex.items-center
                a.ml-4.text-blue-500.border.border-blue-500.font-medium.py-2.px-4.rounded.nav__el-dashboard(href='/dashboard') Dashboard
                a.ml-4.text-blue-500.border.border-blue-500.font-medium.py-2.px-4.rounded.nav__el--logout(href='#') Logout
        // CONTENT
        block content 
            .error
                .error__title
                    h2.heading-secondary.heading-secondary--error Something went wrong!   
                .error__msg= msg
            
        
  
        script(src='/js/bundle.js')






